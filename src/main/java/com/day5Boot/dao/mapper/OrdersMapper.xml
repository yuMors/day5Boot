<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.day5Boot.dao.OrdersMapper">



    <resultMap id="BaseResultMap" type="com.day5Boot.domain.Orders">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="price" column="price" jdbcType="INTEGER"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="version" column="version" jdbcType="INTEGER"/>
            <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,price,remark,
        user_id,update_time,create_time,
        version,del_flag,create_by,
        update_by
    </sql>
    <select id="findAllOrders" resultType="com.day5Boot.domain.Orders">
        SELECT
            O.*,U.`name`
        FROM
            USER u, orders o
        WHERE
            o.`user_id`=u.`id`
    </select>
    <select id="findAllPageOrders" resultType="com.day5Boot.domain.Orders">
        SELECT
            O.*,U.`name`
        FROM
            USER u, orders o
        WHERE
            o.`user_id`=u.`id`
    </select>
</mapper>
